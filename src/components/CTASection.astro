---
import { site } from "../config/site";
import ContactForm from "./ContactForm.astro";

interface Props {
  variant?: "form" | "phone" | "both";
  heading?: string;
  subheading?: string;
}

const {
  variant = "both",
  heading = "Ready to Get Started?",
  subheading = "Request your free estimate today. No pressure, no obligation â€” just honest answers.",
} = Astro.props;
---

<section id="contact" class="bg-bg-surface py-16 md:py-20">
  <div class="max-w-7xl mx-auto px-4">
    <div class="text-center mb-10">
      <h2 class="text-3xl md:text-4xl font-bold">{heading}</h2>
      <p class="mt-4 text-text-muted text-lg max-w-2xl mx-auto">{subheading}</p>
    </div>

    {variant === "phone" ? (
      <div class="text-center">
        <a
          href={site.phoneTel}
          class="inline-flex items-center gap-3 bg-gold hover:bg-gold-light text-black font-bold text-2xl px-10 py-5 rounded-lg transition-colors"
          data-track="phone-cta"
        >
          <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          {site.phoneFormatted}
        </a>
      </div>
    ) : variant === "form" ? (
      <div class="max-w-xl mx-auto">
        <ContactForm />
      </div>
    ) : (
      <div class="grid md:grid-cols-2 gap-10 items-start max-w-4xl mx-auto">
        <div>
          <ContactForm />
        </div>
        <div class="flex flex-col items-center justify-center text-center space-y-6 py-8">
          <p class="text-text-muted">Prefer to talk? Give us a call.</p>
          <a
            href={site.phoneTel}
            class="inline-flex items-center gap-3 bg-gold hover:bg-gold-light text-black font-bold text-xl px-8 py-4 rounded-lg transition-colors"
            data-track="phone-cta"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            {site.phoneFormatted}
          </a>
          <div class="text-text-muted text-sm space-y-1">
            <p>{site.address.street}</p>
            <p>{site.address.city}, {site.address.state} {site.address.zip}</p>
          </div>
        </div>
      </div>
    )}
  </div>
</section>
