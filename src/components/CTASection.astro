---
import { site } from "../config/site";
import ContactForm from "./ContactForm.astro";

interface Props {
  variant?: "form" | "phone" | "both";
  heading?: string;
  subheading?: string;
}

const {
  variant = "both",
  heading = "Ready to Get Started?",
  subheading = "Request your free estimate today. No pressure, no obligation — just honest answers.",
} = Astro.props;
---

<section id="contact" class="bg-bg-surface py-16 md:py-20">
  <div class="max-w-7xl mx-auto px-4">
    <div class="text-center mb-10">
      <h2 class="text-3xl md:text-4xl font-bold">{heading}</h2>
      <p class="mt-4 text-text-muted text-lg max-w-2xl mx-auto">{subheading}</p>
    </div>

    {variant === "phone" ? (
      <div class="text-center">
        <a
          href={site.phoneTel}
          class="inline-flex items-center gap-3 bg-gold hover:bg-gold-light text-black font-bold text-2xl px-10 py-5 rounded-lg transition-colors"
          data-track="phone-cta"
        >
          <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          {site.phoneFormatted}
        </a>
      </div>
    ) : variant === "form" ? (
      <div class="max-w-xl mx-auto">
        <ContactForm />
      </div>
    ) : (
      <div class="grid md:grid-cols-2 gap-10 items-start max-w-5xl mx-auto">
        <div>
          <ContactForm />
        </div>
        <div class="space-y-6">
          <!-- Phone -->
          <div class="bg-bg-elevated border border-border rounded-xl p-6">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-gold/10 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-lg mb-1">Call Us</h3>
                <a
                  href={site.phoneTel}
                  class="text-gold hover:text-gold-light text-xl font-bold transition-colors"
                  data-track="phone-cta"
                >
                  {site.phoneFormatted}
                </a>
                <p class="text-text-muted text-sm mt-1">Mon–Sat, 7 AM – 7 PM</p>
              </div>
            </div>
          </div>

          <!-- Email -->
          <div class="bg-bg-elevated border border-border rounded-xl p-6">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-gold/10 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-lg mb-1">Email Us</h3>
                <a
                  href={`mailto:${site.email}`}
                  class="text-gold hover:text-gold-light transition-colors"
                >
                  {site.email}
                </a>
                <p class="text-text-muted text-sm mt-1">We respond within 24 hours</p>
              </div>
            </div>
          </div>

          <!-- Address -->
          <div class="bg-bg-elevated border border-border rounded-xl p-6">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-gold/10 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-lg mb-1">Visit Our Office</h3>
                <p class="text-text-muted">
                  {site.address.street}<br />
                  {site.address.city}, {site.address.state} {site.address.zip}
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    )}
  </div>
</section>
