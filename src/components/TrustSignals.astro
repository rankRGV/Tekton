---
interface Props {
  variant?: "compact" | "full";
}

const { variant = "compact" } = Astro.props;

const signals = [
  { icon: "star", label: "4.5★ Google Rating (8 Reviews)", value: "4.5★" },
  { icon: "shield", label: "Licensed & Insured", value: "Licensed" },
  { icon: "clock", label: "24-Hour Roof Replacement", value: "24hr" },
  { icon: "dollar", label: "Price Match Guarantee", value: "Price Match" },
];
---

{variant === "compact" ? (
  <section class="py-8 border-y border-border">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center">
        {signals.map((signal) => (
          <div class="flex flex-col items-center gap-2">
            <span class="text-gold font-bold text-lg">{signal.value}</span>
            <span class="text-text-muted text-sm">{signal.label}</span>
          </div>
        ))}
      </div>
    </div>
  </section>
) : (
  <section class="py-16 md:py-20">
    <div class="max-w-7xl mx-auto px-4">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-10">
        Why Homeowners Trust Tekton
      </h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {signals.map((signal) => (
          <div class="bg-bg-surface border border-border rounded-xl p-6 text-center">
            <div class="text-gold text-3xl font-bold mb-2">{signal.value}</div>
            <p class="text-text font-medium">{signal.label}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
)}
