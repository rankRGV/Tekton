---
interface PainPoint {
  title: string;
  description: string;
}

interface Props {
  points: PainPoint[];
  heading?: string;
}

const {
  points,
  heading = "We Get It â€” Hiring a Contractor Is Stressful",
} = Astro.props;
---

<section class="py-16 md:py-20">
  <div class="max-w-7xl mx-auto px-4">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-4">{heading}</h2>
    <p class="text-text-muted text-center text-lg mb-10 max-w-2xl mx-auto">
      You've heard the horror stories. We're here to change that.
    </p>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-auto">
      {points.map((point) => (
        <div class="bg-bg-surface border border-border rounded-xl p-6">
          <h3 class="text-lg font-semibold text-gold mb-2">{point.title}</h3>
          <p class="text-text-muted">{point.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
