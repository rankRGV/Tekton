---
import SchemaMarkup from "./SchemaMarkup.astro";

interface FAQ {
  question: string;
  answer: string;
}

interface Props {
  faqs: FAQ[];
  heading?: string;
}

const { faqs, heading = "Frequently Asked Questions" } = Astro.props;

// Build-time enforcement: minimum 4 FAQs
if (faqs.length < 4) {
  throw new Error(
    `FAQSection requires minimum 4 FAQs. Got ${faqs.length}. Page: ${Astro.url.pathname}`
  );
}
---

<section class="py-16 md:py-20">
  <div class="max-w-3xl mx-auto px-4">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-10">{heading}</h2>

    <div class="space-y-4">
      {faqs.map((faq, i) => (
        <details
          class="group bg-bg-surface border border-border rounded-lg"
        >
          <summary class="flex items-center justify-between cursor-pointer px-6 py-4 text-lg font-medium hover:text-gold transition-colors list-none">
            {faq.question}
            <svg
              class="w-5 h-5 text-text-muted group-open:rotate-180 transition-transform shrink-0 ml-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </summary>
          <div class="px-6 pb-4 text-text-muted leading-relaxed">
            <Fragment set:html={faq.answer} />
          </div>
        </details>
      ))}
    </div>
  </div>
</section>

<SchemaMarkup type="faq" data={{ faqs }} />
