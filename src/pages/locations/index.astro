---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Breadcrumbs from "../../components/Breadcrumbs.astro";
import Hero from "../../components/Hero.astro";
import CTASection from "../../components/CTASection.astro";
import SchemaMarkup from "../../components/SchemaMarkup.astro";
import { locations } from "../../data/locations";
import { services } from "../../data/services";
---

<BaseLayout
  title="Service Areas | Cities We Serve Across the RGV | Tekton Home Solutions"
  description="Tekton Home Solutions serves McAllen, Mission, Edinburg, Pharr, Brownsville, Harlingen, and more. Roofing, pools, remodeling. Call (956) 862-7643."
  >
  <Breadcrumbs items={[{ label: "Locations", href: "/locations/" }]} />
  <Hero
    headline='Serving Homeowners <span class="text-gold">Across the RGV</span>'
    subheadline="Headquartered in McAllen, serving homeowners throughout the Rio Grande Valley. Find your city below."
    backgroundImage="/images/neighborhood-aerial.jpg"
  />

  <section class="py-16 md:py-20">
    <div class="max-w-7xl mx-auto px-4">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-4">
        Cities We Serve
      </h2>
      <p class="text-text-muted text-center mb-10 max-w-2xl mx-auto">
        We provide roofing, pool construction, remodeling, and custom home building across Hidalgo, Cameron, and Starr counties.
      </p>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 max-w-5xl mx-auto">
        {locations.map((loc) => (
          <a
            href={`/${loc.slug}/`}
            class="bg-bg-surface border border-border rounded-xl p-6 hover:border-gold transition-colors group"
          >
            <h3 class="text-lg font-semibold group-hover:text-gold transition-colors mb-1">
              {loc.name}, {loc.state}
            </h3>
            {loc.isHQ && (
              <span class="text-xs text-gold font-medium uppercase tracking-wider">
                Headquarters
              </span>
            )}
            <p class="text-text-muted text-sm mt-2">{loc.description}</p>
            <div class="mt-3 flex flex-wrap gap-1.5">
              {services.map((s) => (
                <a
                  href={`/${loc.slug}/${s.slug}/`}
                  class="text-xs bg-bg-elevated border border-border rounded px-2 py-1 hover:text-gold hover:border-gold transition-colors"
                >
                  {s.name}
                </a>
              ))}
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <CTASection />
  <SchemaMarkup type="organization" />
</BaseLayout>
