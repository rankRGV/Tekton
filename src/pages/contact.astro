---
import BaseLayout from "../layouts/BaseLayout.astro";
import Breadcrumbs from "../components/Breadcrumbs.astro";
import ContactForm from "../components/ContactForm.astro";
import SchemaMarkup from "../components/SchemaMarkup.astro";
import { site } from "../config/site";
---

<BaseLayout
  title="Contact Us | Get a Free Estimate Today | Tekton Home Solutions"
  description="Reach Tekton Home Solutions in McAllen, TX. Call (956) 682-7643 or fill out our form for a free roofing, pool, or remodeling estimate."
>
  <Breadcrumbs items={[{ label: "Contact", href: "/contact/" }]} />

  <section class="py-16 md:py-20">
    <div class="max-w-7xl mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">
          Let's Talk About Your <span class="text-gold">Project</span>
        </h1>
        <p class="text-text-muted text-lg">
          Whether you need a roof replaced, a pool built, a kitchen remodeled, or a custom home designed from scratch — it starts with a conversation. No pressure, no obligations. Just honest answers from a local team that actually picks up the phone.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-12 items-start max-w-5xl mx-auto">
        <!-- Contact Form -->
        <div>
          <h2 class="text-2xl font-bold mb-6">Request a Free Estimate</h2>
          <p class="text-text-muted mb-6">
            Fill out the form below and we'll get back to you within 24 hours. Most estimates are scheduled within 2–3 business days. If your project is urgent — like storm damage or a roof leak — call us directly and we'll prioritize your inspection.
          </p>
          <ContactForm />
        </div>

        <!-- Contact Info -->
        <div class="space-y-8">
          <div>
            <h2 class="text-2xl font-bold mb-6">Get in Touch Directly</h2>
            <p class="text-text-muted mb-6">
              Prefer to talk to a real person? We don't use call centers or answering services. When you call Tekton, you're talking to someone who can actually help you.
            </p>
          </div>

          <!-- Phone -->
          <div class="bg-bg-surface border border-border rounded-xl p-6">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-gold/10 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-lg mb-1">Call Us</h3>
                <a
                  href={site.phoneTel}
                  class="text-gold hover:text-gold-light text-xl font-bold transition-colors"
                  data-track="phone-contact-page"
                >
                  {site.phoneFormatted}
                </a>
                <p class="text-text-muted text-sm mt-1">Mon–Sat, 7 AM – 7 PM</p>
              </div>
            </div>
          </div>

          <!-- Email -->
          <div class="bg-bg-surface border border-border rounded-xl p-6">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-gold/10 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-lg mb-1">Email Us</h3>
                <a
                  href={`mailto:${site.email}`}
                  class="text-gold hover:text-gold-light transition-colors"
                >
                  {site.email}
                </a>
                <p class="text-text-muted text-sm mt-1">We respond within 24 hours</p>
              </div>
            </div>
          </div>

          <!-- Address -->
          <div class="bg-bg-surface border border-border rounded-xl p-6">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-gold/10 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-lg mb-1">Visit Our Office</h3>
                <p class="text-text-muted">
                  {site.address.street}<br />
                  {site.address.city}, {site.address.state} {site.address.zip}
                </p>
              </div>
            </div>
          </div>

          <!-- Social -->
          <div class="flex items-center gap-4">
            {site.social.facebook && (
              <a
                href={site.social.facebook}
                target="_blank"
                rel="noopener noreferrer"
                class="bg-bg-surface border border-border rounded-lg p-3 text-text-muted hover:text-gold hover:border-gold/30 transition-colors"
                aria-label="Facebook"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
                </svg>
              </a>
            )}
            {site.social.instagram && (
              <a
                href={site.social.instagram}
                target="_blank"
                rel="noopener noreferrer"
                class="bg-bg-surface border border-border rounded-lg p-3 text-text-muted hover:text-gold hover:border-gold/30 transition-colors"
                aria-label="Instagram"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z" />
                </svg>
              </a>
            )}
            {site.social.google && (
              <a
                href={site.social.google}
                target="_blank"
                rel="noopener noreferrer"
                class="bg-bg-surface border border-border rounded-lg p-3 text-text-muted hover:text-gold hover:border-gold/30 transition-colors"
                aria-label="Google Business Profile"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92a5.06 5.06 0 01-2.2 3.32v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.1z" />
                  <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" />
                  <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" />
                  <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" />
                </svg>
              </a>
            )}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map -->
  <div class="w-full">
    <iframe
      title="Tekton Home Solutions Office - McAllen, TX"
      src={`https://www.google.com/maps?q=${encodeURIComponent(site.address.street + ', ' + site.address.city + ', ' + site.address.state + ' ' + site.address.zip)}&z=15&output=embed`}
      width="100%"
      height="400"
      style="border:0; display:block; filter:brightness(0.85) contrast(1.1) saturate(0.3);"
      allowfullscreen=""
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"
    ></iframe>
  </div>

  <SchemaMarkup type="organization" />
</BaseLayout>
